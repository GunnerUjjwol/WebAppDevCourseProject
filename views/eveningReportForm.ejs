<%- include('./partials/header.ejs') %>
<form method="POST" name="eveningReport" action="/behavior/reporting/evening">
    <div>
    <h2>Evening Report</h2>   
    <div class="form-group"> 
    <label for="date">Date</label>
    <input type="date" name="date" class="form-control" id="datePicker"/>
    </div>
    </div>
    <script>
    document.getElementById('datePicker').value = new Date().toISOString().substring(0, 10);
    </script>
    <div class="form-group">
    <label for="studyDuration">Study Duration</label>
    <input type="number" step="0.01" placeholder="(in hours)" class="form-control" name="studyDuration" value = "<%=studyDuration%>"/>
    </div>
    <%- include('./partials/error.ejs', { errors: errors, attribute: 'studyDuration'}) %>
    <div class="form-group">
    <label for="exerciseDuration">Sports and Exercise Duration</label>
    <input type="number" step="0.01" placeholder="(in hours)" class="form-control" name="exerciseDuration" value = "<%=exerciseDuration%>"/>
    </div>
    <%- include('./partials/error.ejs', { errors: errors, attribute: 'exerciseDuration'}) %>
    <div class="form-group">
    <label for="regularity">Regularity and Quality of Eating</label>
    <input type="number" name="regularity" class="form-control" value = "<%=regularity%>"/>
    </div>
    <%- include('./partials/error.ejs', { errors: errors, attribute: 'regularity'}) %>
    <div class="form-group">
    <label for="genericMood">Generic Mood</label>
    <input type="number" name="genericMood" class="form-control" value = "<%=genericMood%>"/>
    </div>
    <%- include('./partials/error.ejs', { errors: errors, attribute: 'genericMood'}) %>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('./partials/footer.ejs') %>